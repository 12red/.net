
@{
    ViewData["Title"] = "register";
}
@model IEnumerable<Register>
<html5>
    <head>
        <title>Register</title>
             <link rel="stylesheet" href="~/fontes/material-icon/css/material-design-iconic-font.min.css">

   <!-- Main css -->
        <link rel="stylesheet" href="~/csses/style.css">
    </head>
    <body>
        @if (TempData["UserLoginFailed"] != null)
        {
            <p class="alert alert-danger">@TempData["UserLoginFailed"]</p>
        }

        <div class="main">

            <div class="container">
                
                        <form style="background-color:whitesmoke" asp-action="register">

                            <h2>Register for a new account!</h2>
                            <div class="form-group form-input">


                                <input style="color:black" id="name" type="text" value="" name="username" required>
                                <label for="name" class="form-label">Your name</label>
                            </div>
                            <div class="form-group form-input">

                                <input style="color:black" id="name" type="text" value="" name="email" required>
                                <label for="email" class="form-label">Email</label>
                            </div>
                            <div class="form-group form-input">

                                <input style="color:black"  id="name" type="password" value="" name="password" required>
                                <label for="pasword" class="form-label">Password</label>
                            </div>
                            <div class="form-group form-input">

                                <input style="color:black"  type="password" id="name" name="repassword" required>
                                <label for="repassword" class="form-label">Repeat Password</label>
                            </div>
                            <div class="form-submit">
                                <input id="submit" type="submit" value="Register" class="submit" />



                                <a class="vertify-booking" asp-action="login" asp-controller="Home">Already have an account? Sign in</a>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        

                        <script src="~/vendores/jquery/jquery.min.js"></script>
                        <script src="~/jses/main.js"></script>
</body>


</html5>
